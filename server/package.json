{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "prisma generate --no-hints && tsc",
    "start": "node dist/server.js",
    "dev": "tsc && nodemon",
    "test": "NODE_ENV=test prisma migrate deploy && jest",
    "buildtest": "NODE_ENV=test prisma migrate deploy && npm run build && jest",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"*.json\" \"prisma/*.js\""
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "node_modules"
    ],
    "exec": "npm run build && node dist/server.js"
  },
  "jest": {
    "clearMocks": true
  },
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.621.0",
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/client": "^5.21.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.16",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^5.21.0",
    "supertest": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  }
}
