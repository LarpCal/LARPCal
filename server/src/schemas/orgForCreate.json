{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "username": {
            "type": "string"
        },
        "orgName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "orgUrl": {
            "type": "string",
            "format": "url",
            "maxLength": 500
        },
        "description": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "maxLength": 100,
            "format": "email"
        }
    },
    "additionalProperties": false,
    "required": [
        "username",
        "orgName",
        "orgUrl",
        "description",
        "email"
    ]
}