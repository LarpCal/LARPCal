{
  "name": "larpcal",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/LarpCal/LARPCal#readme",
  "bugs": {
    "url": "https://github.com/LarpCal/LARPCal/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarpCal/LARPCal.git"
  },
  "scripts": {
    "dev:server": "npm -w server run dev",
    "dev:client": "npm -w client run dev",
    "dev": "concurrently --names server,client -c auto npm:dev:server npm:dev:client",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,cjs,css,ts,tsx,scss,json,md,yml}\" \"*.json\"",
    "test": "npm -w server run test",
    "typecheck": "concurrently --raw npm:typecheck:server npm:typecheck:client",
    "typecheck:server": "tsc --project server/tsconfig.json --noEmit",
    "typecheck:client": "tsc --project client/tsconfig.json --noEmit"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "lint-staged": {
    "{server,client}/**/*": "npm run format",
    "**/*.{js,mjs,ts,tsx}": "npm run lint"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false
  }
}
